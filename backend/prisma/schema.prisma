generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model Barang {
  id    Int    @id @default(autoincrement())
  kode  String @unique @db.VarChar(10)
  nama  String @db.VarChar(100)
  harga Int
}

model Customer {
  id   Int    @id @default(autoincrement())
  kode String @unique @db.VarChar(10)
  name String @db.VarChar(100)
  telp String @db.VarChar(20)
}
